	<% include ../partials/header %>



	<div  class="container">
	<header  class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp</h1>	
		<p>View our hand-picked campground from all over the world</p>
		<a href="/campground/new" class="btn btn-primary btn-large"  >Add New</a>	
		</div>
	</header>


	<div class="row" style="display: flex; flex-wrap: wrap;" >
	<% campground.forEach(function(camp){ %>
	<div class="col-md-3 col-sm-6">
	<div class="thumbnail">
		<img src="<%= camp.image %>" >
		<div class="caption">
			<h4><%= camp.name %></h4>
		</div>
		<p align="center">
			<a href="/campground/<%= camp._id %>" class="btn btn-info" >More Info</a>
		</p>
	</div>
	</div>
	<% }) %>
	</div>

	
	</div>


	<% include ../partials/footer %>