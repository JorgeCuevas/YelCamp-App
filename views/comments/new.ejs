<% include ../partials/header %>

<div class="container">
<div class="row">
<h1 class="text-center">Add a comment to <%= campground.name %></h1>
	
		<div style="margin: 25px auto; width: 30%;" >
		<form action="/campground/<%=campground._id%>/comments" method="POST" accept-charset="utf-8">
				<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Text" >
				</div>
				<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block" >Submit</button>	
				<a href="/campground/<%=campground._id %>" class="btn" >Back</a>
				</div>
				
		</form>
		</div>	
</div>
</div>



